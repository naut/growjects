<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Password</th>
    <th>Email</th>
    <th>Profile</th>
	<th>Lastname</th>
	<th>Works on # projects:</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.password %></td>
    <td><%=h user.email %></td>
    <td><%=h user.profile_id %></td>
	<td><%=h user.profile.lastname %></td>
	<td><%=h user.ideas.find(:first).name %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

